<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/css/style.css" />
    <link rel="stylesheet" href="/admin/css/permission.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <%- include('../../partials/sidebar') %>
      <!-- Main Content -->
      <main class="main-content">
        <%- include('../../partials/header') %>
        <a href="<%- prefixAdmin%>/permissions"
          ><img
            src="https://www.pngarts.com/files/8/Back-Button-Transparent-Image.png"
            alt=""
            width="80px"
            height="auto"
            class="return-dashboard"
        /></a>
        <h1 class="h1-header">Phân quyền</h1>
        <div class="permissions-container">
          <div class="section">
            <h2>DASHBOARD</h2>
            <label> <input type="checkbox" /> Open dashboard page </label>
          </div>
          <div class="section">
            <h2>USERS</h2>
            <label> <input type="checkbox" /> Add User </label>
            <label> <input type="checkbox" /> Edit User </label>
            <label> <input type="checkbox" /> Delete User </label>
          </div>
          <div class="section">
            <h2>ROLES & PERMISSIONS</h2>
            <label> <input type="checkbox" /> Add Roles </label>
            <label> <input type="checkbox" /> Edit Roles </label>
            <label> <input type="checkbox" /> Delete Roles </label>
            <label> <input type="checkbox" /> Update Permissions </label>
          </div>
          <div class="actions">
            <button class="btn btn-success">Save</button>
            <button class="btn btn-secondary">Cancel</button>
          </div>
        </div>
      </main>
    </div>
    <script src="/admin/js/product.js"></script>
  </body>
</html>
