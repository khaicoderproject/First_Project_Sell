<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/css/style.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <%- include('../../partials/sidebar') %>
      <!-- Main Content -->
      <main class="main-content">
        <%- include('../../partials/header') %>
        <h1 class="h1-header">Sản phẩm</h1>
        <a href="product/create" class="btn btn-dark">Tạo Sản Phẩm</a>
        <table class="product-table">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên sản phẩm</th>
              <th>Mô tả</th>
              <th>Giá</th>
              <th>Giảm giá</th>
              <th>Số lượng</th>
              <th>Ảnh</th>
              <th>Trạng thái</th>
              <th>Chức năng</th>
            </tr>
          </thead>
          <tbody>
            <% product.forEach((item, index) => { %>
            <tr class="table-row">
              <td><%= index + 1 %></td>
              <td><%= item.title %></td>
              <td><%- item.description.slice(0, 100) %></td>
              <td><%= item.price %></td>
              <td><%= item.discountPercentage %></td>
              <td><%= item.quantity %></td>
              <td>
                <% if (item.thumbnail) { %>
                <img
                  src="/admin/uploads/<%= item.thumbnail %>"
                  alt="<%= item.title %>"
                  class="product-thumbnail card-img-top"
                  style="width: 100px; height: auto"
                />
                <% } else { %> Chưa có ảnh <% } %>
              </td>
              <td>
                <a href="#" class="btn btn-secondary"><%= item.status %></a>
              </td>
              <td>
                <a
                  href="product/detail/<%- item.id%>"
                  class="btn btn-outline-primary"
                  >Chi tiết</a
                >
                <a
                  href="product/update/<%- item.id%>"
                  class="btn btn-outline-info"
                  >Sửa</a
                >
                <button
                  class="btn btn-outline-dark"
                  data-id="<%=item.id%>"
                  data-delete-button
                >
                  Xóa
                </button>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </main>
    </div>
    <form
      action=""
      method="post"
      data-path="<%-prefixAdmin%>/product/delete"
      id="form-delete"
    ></form>
  </body>
  <script src="/admin/js/product.js"></script>
</html>
