<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Create Product</title>
    <link rel="stylesheet" href="/admin/css/style.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <!-- Sidebar -->
      <%- include('../../partials/sidebar') %>

      <!-- Main Content -->
      <main class="main-content">
        <%- include('../../partials/header') %>
        <h1 class="h1-header">Cập nhập sản phẩm</h1>
        <form
          action="<%-prefixAdmin%>/product/update/<%=product.id%>"
          method="POST"
          enctype="multipart/form-data"
        >
          <!-- Tên sản phẩm -->
          <div class="form-group">
            <label for="title">Tên sản phẩm</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              required
              value="<%=product.title %>"
            />
          </div>

          <!-- Mô tả sản phẩm -->
          <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea
              class="form-control my-expressjs-tinymce-app"
              id="description"
              name="description"
              rows="4"
              required
            >
<%=product.description %></textarea
            >
          </div>

          <!-- Giá sản phẩm -->
          <div class="form-group">
            <label for="price">Giá</label>
            <input
              type="number"
              class="form-control"
              id="price"
              name="price"
              required
              value="<%=product.price %>"
            />
          </div>

          <!-- Phần trăm giảm giá -->
          <div class="form-group">
            <label for="discountPercentage">Giảm giá (%)</label>
            <input
              type="number"
              class="form-control"
              id="discountPercentage"
              name="discountPercentage"
              min="0"
              max="100"
              required
              value="<%=product.discountPercentage %>"
            />
          </div>

          <!-- Số lượng sản phẩm -->
          <div class="form-group">
            <label for="quantity">Số lượng</label>
            <input
              type="number"
              class="form-control"
              id="quantity"
              name="quantity"
              required
              value="<%=product.quantity %>"
            />
          </div>
          <!-- status  -->
          <input
            type="radio"
            name="status"
            id="active"
            value="active"
            checked
          />
          <label for="active">Hoạt động</label>
          <input type="radio" name="status" id="inactive" value="inactive" />
          <label for="active">Dừng hoạt động</label>
          <!-- Hình ảnh thumbnail -->
          <div class="form-group">
            <label for="thumbnail">Hình ảnh</label>
            <input
              type="file"
              class="form-control"
              id="thumbnail"
              name="thumbnail"
              accept="image/*"
            />
          </div>

          <!-- Thời gian tạo -->
          <input
            type="hidden"
            name="createAt"
            value="<%= new Date().toISOString() %>"
          />

          <!-- Người cập nhật sản phẩm (khi có thay đổi) -->

          <!-- Thời gian cập nhật -->
          <input
            type="hidden"
            name="updateAt"
            value="<%= new Date().toISOString() %>"
          />

          <!-- Nút tạo sản phẩm -->
          <button type="submit" class="btn btn-dark">Cập nhập</button>
        </form>
      </main>
    </div>
  </body>
</html>
